<section>
  <% if @comments.any? %>
    <% @comments.each do |comment| %>
      <div class="comment clearfix comment_content">
        <p class="comment_title">
          <%= time_ago_in_words(comment.created_at) %>
        </p>
        <p class="comment_body"><%= comment.body %></p>
      </div>
    <% end %>
  <% else %>
    <p>No one has commented yet.</p>
  <% end %>
</section>